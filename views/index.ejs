    <h3>A fun way to learn the key terminology on your path to software engineering.</h3>

    <section>
      <!-- <ol class> names do not matter for GET request-->
      <ol class="messages">
        <!-- LOOP THROUGH ARRAY OF ALL MESSAGES -->
        <!-- SAME COUNTER/NUMBER for thumbUp and thumbDown  -->
        <!-- <span><messages[i].thumbUp></span> -->

        <!-- <li class> names do not matter for GET request-->
        <% for(var i=0; i<messages.length; i++) {%>
          <li class="message">
            <span><%= messages[i].name %></span>
            <span><%= messages[i].msg %></span>
            <span><i class="far fa-thumbs-up"></i></span>
            <span><%= messages[i].thumbUp %></span>
            <span><i class="far fa-thumbs-down"></i></span>
            <span><%= messages[i].thumbDown %></span>
            <span><i class="fas fa-ban"></i></span>
          </li>
          <% } %>
        </ol>
    </section>
    <p>Save your answers</p>
    <!-- Question -->
    <h2></h2>
    <h3>Log your name and enter the unscrambled word.</h3>
    <!-- forms are POSTS/CREATE -->
    <form action="/messages" method="POST">
      <input type="text" placeholder="name" name="name">
      <input type="text" placeholder="answer" name="msg">
      <button type="submit">Submit</button>
      <button id="reset" type="button" name="button">Skip Word</button>
    </form>

